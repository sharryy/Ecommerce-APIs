  "definitions": {
    "User": {
      "type": "object",
      "required": [
        "name",
        "email",
        "password",
        "phone"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        }
      }
    },
    "Cart": {
      "type": "object",
      "required": [
        "userId",
        "productId",
        "quantity"
      ],
      "properties": {
        "userId": {
          "type": "string"
        },
        "productId": {
          "type": "string"
        },
        "quantity": {
          "type": "integer",
          "default": "1"
        }
      }
    },
    "Product": {
      "type": "object",
      "required": [
        "category_id",
        "name",
        "description",
        "price",
        "product_image",
        "sku",
        "quantity"
      ],
      "properties": {
        "category_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "price": {
          "type": "number",
          "default": "0"
        },
        "product_image": {
          "type": "string"
        },
        "sku": {
          "type": "string"
        },
        "quantity": {
          "type": "integer"
        }
      }
    },
    "Category": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        }
      }
    }
  }
